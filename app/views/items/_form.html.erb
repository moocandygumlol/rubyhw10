<%= form_with(model: item) do |form|%>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block"%>
    <%= form.text_field :name , class: "mb-3"%>
  </div>

  <div>
    <%= form.label :price, style: "display: block"%>
    <%= form.text_field :price , class: "mb-3"%>
  </div>

  <div>
    <%= form.label :stock, style: "display: block"%>
    <%= form.number_field :stock , class: "mb-3"%>
  </div>
  <% if session[:status] == "item" %>
    <div>
      <%= form.label :user_id, style: "display: block" %>
      <%= form.text_field :user_id%>
    </div>
  <%else%>
    <% if session[:EditOrNew] == "edit"%>
      <div>
        <%= form.label :user_id, style: "display: none" %>
        <%= form.text_field :user_id, style: "display: none"%>
      </div>
    <%else%>
      <div>
        <%= form.label :user_id, style: "display: none" %>
        <%= form.text_field :user_id, style: "display: none", value: params[:id]%>
      </div>
    <%end%>
  <%end%>

  

  <div>
    <%= form.submit class: "btn btn-success"%>
  </div>
<% end %>
